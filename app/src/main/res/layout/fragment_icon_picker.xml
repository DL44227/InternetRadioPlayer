<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <io.github.vladimirmi.internetradioplayer.ui.CarouselPicker
        android:id="@+id/carousel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/configurationsRg"
        app:layout_constraintTop_toTopOf="parent"
        />

    <RadioGroup
        android:id="@+id/configurationsRg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/colorPicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:checkedButton="@id/configForegroundBt"
        >

        <RadioButton
            android:id="@+id/configBackgroundBt"
            style="@style/HorizontalRadioButton"
            android:text="@string/icon_background_color"
            />

        <RadioButton
            android:id="@+id/configForegroundBt"
            style="@style/HorizontalRadioButton"
            android:text="@string/icon_foreground_color"
            />
    </RadioGroup>

    <io.github.vladimirmi.internetradioplayer.ui.ColorPicker
        android:id="@+id/colorPicker"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/buttonBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        />

    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ButtonStyle"
        >

        <Button
            android:id="@+id/cancelBt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dialog_cancel"
            android:theme="@style/CustomButton.Cancel"
            />

        <Button
            android:id="@+id/okBt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dialog_ok"
            android:theme="@style/CustomButton.Accent"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

