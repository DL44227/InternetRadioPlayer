<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:contentPadding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/equalizerView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                >

                <FrameLayout
                    android:id="@+id/presetSpinnerWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_frame"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center_vertical"
                    >

                    <Spinner
                        android:id="@+id/presetSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </FrameLayout>

                <ImageButton
                    android:id="@+id/saveBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_play"
                    />
            </LinearLayout>

            <io.github.vladimirmi.internetradioplayer.ui.EqualizerContainer
                android:id="@+id/equalizerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/switchBindBt"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        app:backgroundTint="@color/accent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:fabSize="mini"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/equalizerView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:contentPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            >

            <TableRow>

                <Space/>

                <TextView
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_span="3"
                    android:text="BassBoost"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="min"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    />

                <SeekBar
                    android:id="@+id/bassSb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1000"
                    android:padding="8dp"
                    android:progress="500"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="max"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <Space/>

                <TextView
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="Virtualizer"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="min"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    />

                <SeekBar
                    android:id="@+id/virtualSb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1000"
                    android:padding="8dp"
                    android:progress="500"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="max"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    />
            </TableRow>

        </TableLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>