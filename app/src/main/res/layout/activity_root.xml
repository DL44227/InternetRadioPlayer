<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/AppTheme.AppBarOverlay"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/white"
            />

    </android.support.design.widget.AppBarLayout>

    <fragment
        android:id="@+id/metadataFr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:name="io.github.vladimirmi.radius.presentation.metadata.MetadataFragment"
        tools:layout="@layout/fragment_metadata"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/metadataFr"
        android:background="@drawable/shadow"
        />

    <FrameLayout
        android:id="@+id/mainFr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/playerControlsFr"
        android:layout_below="@id/metadataFr"
        />

    <fragment
        android:id="@+id/playerControlsFr"
        android:name="io.github.vladimirmi.radius.presentation.playerControl.PlayerControlFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_player_controls"
        />

</RelativeLayout>